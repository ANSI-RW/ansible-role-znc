LoadModule = webadmin
Version = 1.6.2

<Listener l>
  Port = {{ znc_conf_listener_port }}
  IPv4 = {{ "true" if znc_conf_listener_ipv4 else "false" }}
  IPv6 = {{ "true" if znc_conf_listener_ipv6 else "false" }}
  SSL = {{ "true" if znc_conf_listener_ssl else "false" }}
</Listener>

<User {{ znc_conf_user_username }}>
  Admin = true
  Nick = {{ znc_conf_user_nick }}
  AltNick = {{ znc_conf_user_nick }}_
  Ident = {{ znc_conf_user_ident }}
  RealName = {{ znc_conf_user_realname }}
  LoadModule = chansaver
  LoadModule = controlpanel

  <Pass p>
    Method = {{ znc_conf_user_pass_method.stdout }}
    Hash = {{ znc_conf_user_pass_hash.stdout }}
    Salt = {{ znc_conf_user_pass_salt.stdout }}
  </Pass>
</User>
